<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorApp"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <EditText
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nome_prod"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:id="@+id/edtQuantidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/quantidade_prod"
            android:inputType="numberDecimal"
            android:layout_margin="8dp"
            tools:layout_editor_absoluteX="34dp" android:layout_marginTop="117dp"
            app:layout_constraintTop_toBottomOf="@+id/edtNome"/>
    <EditText
            android:id="@+id/edtMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/marca_prod"
            android:layout_margin="8dp"
            tools:layout_editor_absoluteX="8dp" app:layout_constraintTop_toBottomOf="@+id/edtQuantidade"/>


</androidx.constraintlayout.widget.ConstraintLayout>